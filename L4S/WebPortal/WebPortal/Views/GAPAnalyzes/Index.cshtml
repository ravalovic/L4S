@model IEnumerable<WebPortal.GAPAnalyze>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}
<style>
   td.wrong {
       color: red
   }
</style>
<ul class="nav nav-tabs" role="tablist">
    <li class="active">@Html.ActionLink(Resources.Labels.ProcessTap_GAP, "Index", "GAPAnalyzes")</li>
    <li>@Html.ActionLink(Resources.Labels.ProcessTab_Status, "Index", "ProcessStatus")</li>
    <li>@Html.ActionLink(Resources.Labels.ProcessTab_File, "Index", "FileInfo")</li>
    <li>@Html.ActionLink(Resources.Labels.ProcessTab_FileDuplicity, "Index", "FileDuplicity")</li>
</ul>
<h2>@Resources.Labels.GAP_PageTitle</h2>

<div class="col-xs-12 col-sm-12 col-md-12">
    <div class="panel panel-primary">

        <div class="panel-heading clearfix"> </div>

        <div class="panel-body">
            <div class="table-responsive">
                <table id="mytable" class="table table-striped table-bordered table-hover table-condensed">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Day)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FileNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FileName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TCInsertTime)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            @Html.Raw((item.FileName == null) ? "<td class='wrong'>" : "<td>")
                            @Html.DisplayFor(modelItem => item.Day)
                            @Html.Raw("</td>")
                            @Html.Raw((item.FileName == null) ? "<td class='wrong'>" : "<td>")
                            @Html.DisplayFor(modelItem => item.FileNumber)
                            @Html.Raw("</td>")
                            @Html.Raw((item.FileName == null) ? "<td class='wrong'>" : "<td>")
                            @Html.DisplayFor(modelItem => item.FileName)
                            @Html.Raw("</td>")
                            @Html.Raw((item.FileName == null) ? "<td class='wrong'>" : "<td>")
                            @Html.DisplayFor(modelItem => item.TCInsertTime)
                            @Html.Raw("</td>")
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
