@model IEnumerable<WebPortal.CATOwnerData>

@{
    ViewBag.Title = "Index";
}

<h2>@Resources.Labels.Owner_IndexPageTitle</h2>

<div class="col-xs-12 col-sm-12 col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left"><strong>@Resources.Labels.Owner_IndexTableTitle</strong></h4>
            <br />
            <div class="group-btn text-right">
                <a class="btn  btn-primary-spacing btn-success" href="~/OwnerDatas/Create"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;@Resources.Labels.Btn_Create </a>
            </div>
        </div>

        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <tr>
                        <th>
                            @Html.LabelFor(model => model.FirstOrDefault().OwnerCompanyName, Resources.Labels.OwnerCompanyName)
                        </th>
                        <th>
                            @Html.LabelFor(model => model.FirstOrDefault().OwnerCompanyID, Resources.Labels.OwnerCompanyID)
                        </th>
                        <th>
                            @Html.LabelFor(model => model.FirstOrDefault().OwnerCompanyTAXID, Resources.Labels.OwnerCompanyTAXID)
                        </th>
                        <th>
                            @Html.LabelFor(model => model.FirstOrDefault().OwnerCompanyType, Resources.Labels.OwnerCompanyType)
                        </th>
                        <th>
                            @Html.LabelFor(model => model.FirstOrDefault().Active, Resources.Labels.OwnerActive)
                        </th>
                        <th>@Resources.Labels.Txt_Action</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OwnerCompanyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OwnerCompanyID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OwnerCompanyTAXID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OwnerCompanyType)
                            </td>
                            <td>
                                @Html.CheckBoxFor(modelItem => item.Active, new { onclick = "changeStatus(" + item.ID + ")" })
                            </td>
                            <td>
                                <div class="group-btn text-right">
                                    <a class="btn btn-primary-spacing btn-success" href="~/OwnerDatas/Edit/@item.ID"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>&nbsp;@Resources.Labels.Btn_Edit </a>
                                    <a class="modal-link-small btn btn-primary-spacing btn-danger" href="~/OwnerDatas/Delete/@item.ID"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span>&nbsp;@Resources.Labels.Btn_Delete </a>
                                </div>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    <script type="text/javascript">
        function changeStatus(id) {
        var url = '@Url.Action("SetActive", "OwnerDatas")' + '/' + id;
        window.location = url;
        }
    </script>
}


