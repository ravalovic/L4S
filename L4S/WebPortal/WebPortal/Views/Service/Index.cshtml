@using WebPortal.Models
@model IEnumerable<CATServiceParameters>

@{
    ViewBag.Title = @Resources.Labels.Service_PageTitle;
}

<h2>@Resources.Labels.Service_PageTitle</h2>
<p>@Resources.Labels.Service_PageSubtitle</p>


<div class="col-xs-12 col-sm-12 col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left"><strong>@Resources.Labels.Service_TableTitle</strong></h4>
            <br />
            <div class="group-btn text-right">
                <a class="btn btn-primary-spacing btn-success modal-link-medium" href="~/Service/Create/"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;@Resources.Labels.Btn_Add</a>
            </div>
        </div>

        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ServiceCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ServiceDescription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ServiceBasicPrice)
                        </th>
                        <th>
                            <label>@Resources.Labels.Service_Patterns </label>
                        </th>
                        <th>@Resources.Labels.Txt_Action</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServiceCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServiceDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServiceBasicPrice)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.TCInsertTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TCLastUpdate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TCActive)
                                </td>*@
                            <td>
                                @if (HttpContext.Current.User.IsInRole(WebRoles.Admin))
                                {
                                    <a class="btn btn-primary" href="~/Patterns/Index/@item.PKServiceID"><span class="glyphicon glyphicon-tasks" aria-hidden="true"></span>&nbsp;@Resources.Labels.Service_Patterns</a>
                                }
                            </td>
                            <td>
                                <div class="group-btn text-center">
                                    <a class="modal-link-medium btn btn-primary-spacing btn-success" href="~/Service/Edit/@item.PKServiceID"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>&nbsp;@Resources.Labels.Btn_Edit</a>
                                @if (HttpContext.Current.User.IsInRole(WebRoles.Manager))
                                {
                                    <a class="modal-link-small btn btn-primary-spacing btn-danger" href="~/Service/Delete/@item.PKServiceID"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span>&nbsp;@Resources.Labels.Btn_Delete</a>
                                }
                                </div>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>


