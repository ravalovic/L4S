@model PagedList.IPagedList<WebPortal.STInputFileDuplicity>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}
<ul class="nav nav-tabs" role="tablist">
    <li>@Html.ActionLink(Resources.Labels.ProcessTab_Status, "Index", "ProcessStatus")</li>
    <li>@Html.ActionLink(Resources.Labels.ProcessTab_File, "Index", "FileInfo")</li>
    <li class="active">@Html.ActionLink(Resources.Labels.ProcessTab_FileDuplicity, "Index", "FileDupicity")</li>
</ul>


<h2>@Resources.Labels.FileDuplicity_PageTitle</h2>

<div class="col-xs-12 col-sm-12 col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left"><strong>@Resources.Labels.FileDuplicity_TableTitle</strong></h4>
            <br />
            <div class="form-group form-horizontal col-md-12">
                <!-- Date input -->
                <label class="control-label col-md-1" for="date1">Od</label>
                <input class="form-control col-md-3 datefield" id="date1" name="date" placeholder="DD.MM.YYYY" type="text" />
                <label class="control-label col-md-1" for="date2">Do</label>
                <input class="form-control col-md-3 datefield" id="date2" name="date" placeholder="DD.MM.YYYY" type="text" />
                <div class="input-group-btn col-md-3 text-right">
                    <button class="btn btn-danger text-right" aria-hidden="true" onclick="location.href = '@Url.Action("Search", "FileDuplicity")?insertDateFrom=' + document.getElementById('date1').value+'&'+'insertDateTo=' + document.getElementById('date2').value"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Hľadať </button>
                </div>
            </div>
        </div>
        


   <div class="panel-body">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <tr>                  
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().InsertDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().OriFileName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().OriginalFileChecksum)
                    </th>                  
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>                      
                        <td>
                            @Html.DisplayFor(modelItem => item.InsertDateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OriFileName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OriginalFileChecksum)
                        </td>
                      
                        <td>
                            <a class="modal-link-small btn btn-danger" href="/FileDuplicity/Delete/@item.ID"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> @Resources.Labels.Btn_Delete </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page}))
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @*@Styles.Render("~/Content/cssjqryUi")*@
    @*@Styles.Render("~/Content/css")*@
    <script type="text/javascript">
        $(document).ready(function() {
            $('.datefield').datepicker({
                dateFormat: "dd/mm/yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0",
            });
        });


    </script>
}