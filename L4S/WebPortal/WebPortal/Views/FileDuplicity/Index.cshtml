@model IEnumerable<WebPortal.STInputFileDuplicity>

@{
    ViewBag.Title = "Index";
}
<ul class="nav nav-tabs" role="tablist">
    <li>@Html.ActionLink(Resources.Labels.ProcessTab_Status, "Index", "ProcessStatus")</li>
    <li>@Html.ActionLink(Resources.Labels.ProcessTab_File, "Index", "FileInfo")</li>
    <li class="active">@Html.ActionLink(Resources.Labels.ProcessTab_FileDuplicity, "Index", "FileDupicity")</li>
</ul>


<h2>@Resources.Labels.FileDuplicity_PageTitle</h2>
<p>@Resources.Labels.FileDuplicity_PageSubtitle</p>

<div class="col-xs-12 col-sm-12 col-md-12">
    <div class="panel panel-primary">

        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left"><strong>@Resources.Labels.FileDuplicity_TableTitle</strong></h4>
            <br />
            @*<div class="input-group text-right">
                <div class="input-group-btn">
                    <a class="btn btn-success modal-link-medium" href="/CONFGeneralSettings/Create"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> @Resources.Labels.Btn_Add </a>
                </div>
            </div>*@
        </div>


        <div class="panel-heading">
            <h4 class="panel-title"><strong>@Resources.Labels.FileDuplicity_TableTitle</strong></h4>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <tr>                  
                    <th>
                        @Html.DisplayNameFor(model => model.InsertDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OriFileName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OriginalFileChecksum)
                    </th>                  
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>                      
                        <td>
                            @Html.DisplayFor(modelItem => item.InsertDateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OriFileName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OriginalFileChecksum)
                        </td>
                      
                        <td>
                            <a class="modal-link-small btn btn-danger" href="/FileDuplicity/Delete/@item.ID"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> @Resources.Labels.Btn_Delete </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>