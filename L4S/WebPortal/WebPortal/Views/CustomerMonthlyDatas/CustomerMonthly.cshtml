@model PagedList.IPagedList<WebPortal.view_MonthlyData>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}
<ul class="nav nav-tabs" role="tablist">
    <li class="active">@Html.ActionLink(Resources.Labels.MonthlyDataTab, "CustomerMonthly", "CustomerMonthlyDatas")</li>
    <li>@Html.ActionLink(Resources.Labels.DailyDataTab, "CustomerDaily", "CustomerDailyDatas")</li>
    <li>@Html.ActionLink(Resources.Labels.DetailDataTab, "DetailData", "LogsOfServices")</li>
</ul>
<h2>Mesačný sumár</h2>

<div class="col-xs-12 col-sm-12 col-md-12">
    <div class="panel panel-primary">

        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left"><strong>@Resources.Labels.Process_TableTitle</strong></h4>
            <br />
            <div class="form-group form-horizontal col-md-12">
                <!-- Date input -->
                <label class="control-label col-md-1" for="date1">Od</label>
                <input class="form-control col-md-3 datefield" id="date1" name="date" placeholder="DD.MM.YYYY" type="text" />
                <label class="control-label col-md-1" for="date2">Do</label>
                <input class="form-control col-md-3 datefield" id="date2" name="date" placeholder="DD.MM.YYYY" type="text" />
                <label class="control-label col-md-1" for="date2">Filter</label>
                <input class="form-control col-md-3 textfield" id="searchText" name="searchtext" type="text" />
                <div class="input-group-btn col-md-3 text-right">
                    <button class="btn btn-danger text-right" aria-hidden="true" onclick="location.href = '@Url.Action("Search", "CustomerMonthlyDatas")??insertDateFrom=' + document.getElementById('date1').value+'&'+'insertDateTo=' + document.getElementById('date2').value+'&'+'searchText=' + document.getElementById('searchText').value +'&'+'currentFilter='+ '@ViewBag.CurrentFilter' +'&'+'currentFrom='+ '@ViewBag.CurrentFrom'+'&'+'currentTo='+ '@ViewBag.CurrentTo'"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Hľadať </button>
                </div>
            </div>           
        </div>


        @*<div class="panel-heading">
                <h4 class="panel-title"><strong>@Resources.Labels.Process_TableTitle</strong></h4>
                <p style="text-align: right">
                    Od: <input style="color: black" type="text" name="dtFrom" id="datepickerFrom" class="datefield"/>
                    Do: <input style="color: black" type="text" name="dtTo" id="datepickerTo" class="datefield" />
                    <button class="btn btn-danger" data-dismiss="modal" aria-hidden="true" onclick="location.href = '@Url.Action("Search", "ProcessStatus")?insertDateFrom=' + document.getElementById('datepickerFrom').value+'&'+'insertDateTo=' + document.getElementById('datepickerTo').value"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Hľadať </button>
                </p>

            </div>*@
        <div class="panel-body">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().DateOfRequest)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().CustomerID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().CustomerIdentification)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().CustomerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().ServiceID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().ServiceCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().NumberOfRequest)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().ReceivedBytes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().RequestedTime)
                </th>
             </tr>

            @foreach (var item in Model)
            {
                <tr onclick="location.href = '@(Url.Action("Details", "CustomerDailyDatas", new { custId = item.CustomerID, servId =item.ServiceID, reqDate = item.DateOfRequest }))'">
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfRequest)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerIdentification)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfRequest)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReceivedBytes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestedTime)
                    </td>
                </tr>
            }

        </table>
        </div>
    </div>
    <br />
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("CustomerMonthly", new { page, currentFilter = ViewBag.CurrentFilter, currentFrom = ViewBag.CurrentFrom, currentTo = ViewBag.CurrentTo }))

</div>
@section Scripts {   
    @Scripts.Render("~/bundles/jqueryui")   
    @*@Styles.Render("~/Content/cssjqryUi")*@   
    @*@Styles.Render("~/Content/css")*@
    <script type="text/javascript">   
        $(document).ready(function () {   
            $('.datefield').datepicker({   
                dateFormat: "dd.mm.yy",   
                changeMonth: true,   
                changeYear: true,   
                yearRange: "-60:+0"   
            });   
        });   
    </script>   
}
