@model PagedList.IPagedList<WebPortal.CATLogsOfService>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}
<ul class="nav nav-tabs" role="tablist">
    <li>@Html.ActionLink(Resources.Labels.MonthlyDataTab, "CustomerMonthly", "CustomerMonthlyDatas")</li>
    <li>@Html.ActionLink(Resources.Labels.DailyDataTab, "CustomerDaily", "CustomerDailyDatas")</li>
    <li class="active">@Html.ActionLink(Resources.Labels.DetailDataTab, "DetailData", "LogsOfServices")</li>

</ul>
<h2>Deatilný výpis logov</h2>
<div class="col-xs-12 col-sm-12 col-md-12">
<div class="panel panel-primary">

    <div class="panel-heading clearfix">
        <h4 class="panel-title pull-left"><strong>@Resources.Labels.Process_TableTitle</strong></h4>
        <br />
        <div class="form-group form-horizontal col-md-12">
            <!-- Date input -->
            <label class="control-label col-md-1" for="date1">Od</label>
            <input class="form-control col-md-3 datefield" id="date1" name="date" placeholder="DD.MM.YYYY" type="text" />
            <label class="control-label col-md-1" for="date2">Do</label>
            <input class="form-control col-md-3 datefield" id="date2" name="date" placeholder="DD.MM.YYYY" type="text" />
            <label class="control-label col-md-1" for="date2">Zákazník</label>
            <input class="form-control col-md-3 textfield" id="searchText" name="searchtext" type="text" />
            <div class="input-group-btn col-md-3 text-right">
                <button class="btn btn-danger text-right" aria-hidden="true" onclick="location.href = '@Url.Action("Search", "CustomerMonthlyDatas")?insertDateFrom=' + document.getElementById('date1').value+'&'+'insertDateTo=' + document.getElementById('date2').value+'&'+'searchText=' + document.getElementById('searchText').value"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Hľadať </button>
            </div>
        </div>           
    </div>


