@model IEnumerable<WebPortal.CATProcessStatus>

@{
    ViewBag.Title = "Index";
}

<ul class="nav nav-tabs" role="tablist">
    <li class="active">@Html.ActionLink(Resources.Labels.ProcessTab_Status, "Index", "ProcessStatus")</li>
    <li>@Html.ActionLink(Resources.Labels.ProcessTab_File, "Index", "FileInfo")</li>
    <li>@Html.ActionLink(Resources.Labels.ProcessTab_FileDuplicity, "Index", "FileDuplicity")</li>
</ul>

<h2>@Resources.Labels.Process_PageTitle</h2>
<p>@Resources.Labels.Process_PageSubtitle</p>


<div class="col-xs-12 col-sm-12 col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4 class="panel-title"><strong>@Resources.Labels.Process_TableTitle</strong></h4>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StepName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BatchID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BatchRecordNum)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberOfService)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberOfCustomer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberOfUnknownService)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberOfPreprocessDelete)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.TCInsertTime)
                    </th>*@
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StepName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BatchID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BatchRecordNum)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfService)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfCustomer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfUnknownService)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfPreprocessDelete)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.TCInsertTime)
                        </td>*@
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>