@model IEnumerable<WebPortal.CONFGeneralSettings>

@{
    ViewBag.Title = "Index";
}

<h2>@Resources.Labels.Config_PageTitle</h2>

<div class="col-xs-12 col-sm-12 col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left"><strong>@Resources.Labels.Config_TableTitle</strong></h4>
            <br />
            <div class="input-group text-right">
                <div class="input-group-btn">
                    <a class="btn btn-success" href="~/GeneralSettings/Create"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> @Resources.Labels.Btn_Create </a>
                </div>
            </div>
        </div>

        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ParamName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ParamValue)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Note)
                        </th>
                        <th>Akcia</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ParamName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ParamValue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Note)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.TCInsertTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TCLastUpdate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TCActive)
                                </td>*@
                            <td>
                                <div>
                                    <a class="btn btn-success" href="~/GeneralSettings/Edit/@item.ID"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> @Resources.Labels.Btn_Edit </a>
                                    <a class="modal-link-small btn btn-danger" href="~/GeneralSettings/Delete/@item.ID"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> @Resources.Labels.Btn_Delete </a>
                                </div>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

