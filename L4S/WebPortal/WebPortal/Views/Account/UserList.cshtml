@model IEnumerable<WebPortal.Models.UserViewModel>
@{
    ViewBag.Title = "UserList";
}


<h2>@Resources.Labels.UserList_PageTitle_</h2>
<p>@Resources.Labels.UserList_PageSubtitle_</p>
<p>
    @Html.ActionLink("Create New", "Register")
</p>

<div class="col-sm-12 col-md-8">
    <div class="panel panel-primary">
        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left"><strong>@Resources.Labels.UserList_TableTitle_</strong></h4>
            <br />
            <div class="input-group text-right">
                <div class="input-group-btn">
                    <a class="modal-link-medium btn btn-success" href="~/AccountController/Create/"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> @Resources.Labels.Btn_Create </a>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>                      
                        <td>
                            @Html.ActionLink("Zmena hesla", "Edit", new { id = item.Id })
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>


