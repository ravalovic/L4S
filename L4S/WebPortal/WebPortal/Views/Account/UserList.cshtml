@if (ViewBag.message != null )
{
    <div class="alert alert-success col-md-11">
        <strong>OK!</strong> @ViewBag.message
    </div>
}

<div class="col-sm-12 col-md-11">
    <div class="panel panel-primary">
        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left"><strong>@Resources.Labels.UserList_TableTitle_</strong></h4>
            <br />
            <div class="input-group text-right">
                <div class="input-group-btn">
                    <a class="modal-link-medium btn btn-success" href="~/Account/Register/"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> @Resources.Labels.Btn_Create </a>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <tr>                
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserFirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserLastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>                      
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserFirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserLastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>                      
                        <td>
                            <a class="modal-link-medium btn btn-primary" href="~/Account/Password/@item.Id"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span> @Resources.Labels.Btn_ChangePassword </a>
                            <a class="modal-link-medium btn btn-success" href="~/Account/Edit/@item.Id"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> @Resources.Labels.Btn_Edit </a>
                            <a class="modal-link-medium btn btn-danger" href="~/Account/Delete/@item.Id"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> @Resources.Labels.Btn_Delete </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>


