@using System.Data.Entity
@using System.Diagnostics
@using System.Reflection
@using System.Text.RegularExpressions
@using WebPortal.Common
@using WebPortal.DataContexts
@{
    ViewBag.Title = "O aplikácii";
    ViewBag.Message = "Aplikácia na spracovanie a vyhodnotenie logov z webových serverov služieb nevizuálnych rozhraní";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@{  var context = new L4SDb();
    string connectionString = context.Database.Connection.ConnectionString;
    Regex r = new Regex(@"Password=[^;]*");
    string newString = r.Replace(connectionString, "Password=XXXXXX");
    ViewBag.DBname = newString;}
<h4>Databáza: @ViewBag.DBName</h4>
<h4>@(new Helper.Version().DbVersion) </h4>
<h4>@(new Helper.Version().WebApp)</h4>
<h4>@(new Helper.Version().L4SUtils)</h4>
<h4>@(new Helper.Version().InstallDate)</h4>
