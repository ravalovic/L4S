@model PagedList.IPagedList<WebPortal.STInputFileInfo>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<ul class="nav nav-tabs" role="tablist">
    <li>@Html.ActionLink(Resources.Labels.ProcessTap_GAP, "Index", "GAPAnalyzes")</li>
    <li>@Html.ActionLink(Resources.Labels.ProcessTab_Status, "Index", "ProcessStatus")</li>
    <li class="active">@Html.ActionLink(Resources.Labels.ProcessTab_File, "Index", "FileInfo")</li>
    <li>@Html.ActionLink(Resources.Labels.ProcessTab_FileDuplicity, "Index", "FileDuplicity")</li>
    <li>@Html.ActionLink(Resources.Labels.ProcessTab_UnknownService, "Index", "UnknownServices")</li>
</ul>


<h2>@Resources.Labels.FileInfo_PageTitle</h2>

<div class="col-xs-12 col-sm-12 col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left"><strong>@Resources.Labels.Filter</strong></h4>
            <br />

            <form class="form-horizontal col-md-12" role="form">
                <div class="row">
                    <!-- Date input -->
                    <div class="form-inline">

                        <div class="form-group">
                            <label class="control-label col-md-1" for="date1">Od</label>
                            <div class="col-md-2 col-sm-10">
                                <input class="form-control datefield" id="date1" name="date" placeholder="DD.MM.YYYY" type="text" value="@ViewBag.CurrentFrom" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-1" for="date2">Do</label>
                            <div class="col-md-2 col-sm-10">
                                <input class="form-control datefield" id="date2" name="date" placeholder="DD.MM.YYYY" type="text" value="@ViewBag.CurrentTo" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" for="date2">Filter</label>
                            <div class="col-md-2 col-sm-10">
                                <input class="form-control textfield" id="searchText" name="searchtext" type="text" value="@ViewBag.CurrentFilter" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class=" input-group-btn  col-md-2 col-sm-10">
                                <button class="btn btn-success text-right" aria-hidden="true" onclick="location.href = '@Url.Action("Index", "FileInfo")?insertDateFrom=' + document.getElementById('date1').value+'&'+'insertDateTo=' + document.getElementById('date2').value+'&'+'searchText=' + document.getElementById('searchText').value +'&'+'currentFilter='+ '@ViewBag.CurrentFilter' +'&'+'currentFrom='+ '@ViewBag.CurrentFrom'+'&'+'currentTo='+ '@ViewBag.CurrentTo'"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>Hľadať</button>
                                <span style="margin: 10px"></span>
                                <button class="btn btn-danger text-right" aria-hidden="true" onclick="location.href = '@Url.Action("Index", "FileInfo")'"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Reset </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <tr>
                    <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().FileName)
                        </th>
                    @*  <th>
                            @Html.DisplayNameFor(model => model.Checksum)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LinesInFile)
                        </th*@

                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().LoaderBatchID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().LoadedRecord)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().InsertDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().OriFileName)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().OriginalFileChecksum)
                    </th>*@
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>                           
                               @Html.DisplayFor(modelItem => item.FileName)
                            </td>
                        @*<td> 
        @Html.DisplayFor(modelItem => item.Checksum)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LinesInFile)
    </td>*@

                        <td>
                            @Html.DisplayFor(modelItem => item.LoaderBatchID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoadedRecord)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InsertDateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OriFileName)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.OriginalFileChecksum)
                        </td>*@
                        <td>
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                            <a class="modal-link-small btn btn-danger" href="~/FileInfo/Delete/@item.Id"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> @Resources.Labels.Btn_Delete </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    <br />
    <a class="btn btn-info" href="~/FileInfo/FileReport/?extension=csv"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> @Resources.Labels.Btn_Save </a>
    
    <br/>
    Strana @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount Počet záznamov @Model.TotalItemCount Počet záznamov @Model.TotalItemCount
    @*@Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter, currentFrom = ViewBag.CurrentFrom, currentTo = ViewBag.CurrentTo }))*@
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter, currentFrom = ViewBag.CurrentFrom, currentTo = ViewBag.CurrentTo, currentCustId = ViewBag.CurrentCustId, currentServId = ViewBag.CurrentServId, currentDate = ViewBag.CurrentReqDate }))

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @*@Styles.Render("~/Content/cssjqryUi")*@
    @*@Styles.Render("~/Content/css")*@
    <script type="text/javascript">
        $(document).ready(function () {
            $('.datefield').datepicker({
                dateFormat: "dd.mm.yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0"
            });
        });


    </script>
}