@model PagedList.IPagedList<WebPortal.STInputFileInfo>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<ul class="nav nav-tabs" role="tablist">
    <li>@Html.ActionLink(Resources.Labels.ProcessTap_GAP, "Index", "GAPAnalyzes")</li>
    <li>@Html.ActionLink(Resources.Labels.ProcessTab_Status, "Index", "ProcessStatus")</li>
    <li class="active">@Html.ActionLink(Resources.Labels.ProcessTab_File, "Index", "FileInfo")</li>
    <li>@Html.ActionLink(Resources.Labels.ProcessTab_FileDuplicity, "Index", "FileDuplicity")</li>
    <li>@Html.ActionLink(Resources.Labels.ProcessTab_UnknownService, "Index", "UnknownServices")</li>
</ul>


<h2>@Resources.Labels.FileInfo_PageTitle</h2>

<div class="col-xs-12 col-sm-12 col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left"><strong>@Resources.Labels.Filter</strong></h4>
            <br />

            <form class="form-horizontal col-md-12" role="form">
                <div class="row">
                    <!-- Date input -->
                    <div class="form-inline">

                        <div class="form-group">
                            <label class="control-label col-md-1" for="date1">@Resources.Labels.Lbl_From</label>
                            <div class="col-md-2 col-sm-10">
                                <input class="form-control datefield" id="date1" name="date" placeholder="DD.MM.YYYY" type="text" value="@ViewBag.CurrentFrom" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-1" for="date2">@Resources.Labels.Lbl_To</label>
                            <div class="col-md-2 col-sm-10">
                                <input class="form-control datefield" id="date2" name="date" placeholder="DD.MM.YYYY" type="text" value="@ViewBag.CurrentTo" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" for="date2">Filter</label>
                            <div class="col-md-2 col-sm-10">
                                <input class="form-control textfield" id="searchText" name="searchtext" type="text" value="@ViewBag.CurrentFilter" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class=" group-btn  text-right">
                                <a class="btn btn-primary-spacing btn-success" aria-hidden="true" onclick="location.href = '@Url.Action("Index", "FileInfo")?insertDateFrom=' + document.getElementById('date1').value+'&'+'insertDateTo=' + document.getElementById('date2').value+'&'+'searchText=' + document.getElementById('searchText').value +'&'+'currentFilter='+ '@ViewBag.CurrentFilter' +'&'+'currentFrom='+ '@ViewBag.CurrentFrom'+'&'+'currentTo='+ '@ViewBag.CurrentTo'"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>@Resources.Labels.Btn_Search</a>
                                <a class="btn btn-primary-spacing btn-danger" aria-hidden="true" onclick="location.href = '@Url.Action("Index", "FileInfo")'"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp;@Resources.Labels.Btn_Reset</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().FileName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().LoaderBatchID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().LoadedRecord)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().InsertDateTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().OriFileName)
                        </th>
                        <th>@Resources.Labels.Txt_Action</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FileName)
                            </td>
                           

                            <td>
                                @Html.DisplayFor(modelItem => item.LoaderBatchID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LoadedRecord)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InsertDateTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OriFileName)
                            </td>
                            
                            <td>
                                
                                <a class="modal-link-small btn btn-danger" href="~/FileInfo/Delete/@item.Id"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span>&nbsp;@Resources.Labels.Btn_Delete</a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
        <br />
    <div class="group-btn">     
        <a class="btn btn-primary-spacing btn-info" aria-hidden="true" onclick="location.href = '@Url.Action("Report", "FileInfo")?extension=csv&insertDateFrom=' + document.getElementById('date1').value+'&'+'insertDateTo=' + document.getElementById('date2').value+'&'+'searchText=' + document.getElementById('searchText').value +'&'+'currentFilter='+ '@ViewBag.CurrentFilter' +'&'+'currentFrom='+ '@ViewBag.CurrentFrom'+'&'+'currentTo='+ '@ViewBag.CurrentTo'"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp;@Resources.Labels.Btn_CSV </a>
        <a class="btn btn-primary-spacing btn-info" aria-hidden="true" onclick="location.href = '@Url.Action("Report", "FileInfo")?extension=pdf&insertDateFrom=' + document.getElementById('date1').value+'&'+'insertDateTo=' + document.getElementById('date2').value+'&'+'searchText=' + document.getElementById('searchText').value +'&'+'currentFilter='+ '@ViewBag.CurrentFilter' +'&'+'currentFrom='+ '@ViewBag.CurrentFrom'+'&'+'currentTo='+ '@ViewBag.CurrentTo'"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp;@Resources.Labels.Btn_PDF </a>
        <a class="btn btn-primary-spacing btn-info" aria-hidden="true" onclick="location.href = '@Url.Action("Report", "FileInfo")?extension=xlsx&insertDateFrom=' + document.getElementById('date1').value+'&'+'insertDateTo=' + document.getElementById('date2').value+'&'+'searchText=' + document.getElementById('searchText').value +'&'+'currentFilter='+ '@ViewBag.CurrentFilter' +'&'+'currentFrom='+ '@ViewBag.CurrentFrom'+'&'+'currentTo='+ '@ViewBag.CurrentTo'"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp;@Resources.Labels.Btn_XLSX </a>
        <a class="btn btn-primary-spacing btn-info" aria-hidden="true" onclick="location.href = '@Url.Action("Report", "FileInfo")?extension=html&insertDateFrom=' + document.getElementById('date1').value+'&'+'insertDateTo=' + document.getElementById('date2').value+'&'+'searchText=' + document.getElementById('searchText').value +'&'+'currentFilter='+ '@ViewBag.CurrentFilter' +'&'+'currentFrom='+ '@ViewBag.CurrentFrom'+'&'+'currentTo='+ '@ViewBag.CurrentTo'"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp;@Resources.Labels.Btn_HTML </a>
    </div>
        <br />
        Strana @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount Počet záznamov @Model.TotalItemCount Počet záznamov @Model.TotalItemCount
        @*@Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter, currentFrom = ViewBag.CurrentFrom, currentTo = ViewBag.CurrentTo }))*@
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter, currentFrom = ViewBag.CurrentFrom, currentTo = ViewBag.CurrentTo, currentCustId = ViewBag.CurrentCustId, currentServId = ViewBag.CurrentServId, currentDate = ViewBag.CurrentReqDate }))
</div>


@section Scripts {
    <script type="text/javascript">
        $(function () {
            $('#date1').datetimepicker({
                viewMode: 'days',
                format: 'DD.MM.YYYY'
            });
            $('#date2').datetimepicker({
                viewMode: 'days',
                format: 'DD.MM.YYYY'
            });
        });
    </script>
}
