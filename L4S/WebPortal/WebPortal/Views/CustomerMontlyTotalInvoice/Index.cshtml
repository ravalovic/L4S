@model PagedList.IPagedList<WebPortal.view_CustomerMontlyTotalInvoice>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}
<ul class="nav nav-tabs" role="tablist">
    <li class="active">@Html.ActionLink(Resources.Labels.InvoiceTotalDataTab, "Index", "CustomerMontlyTotalInvoice")</li>
    <li>@Html.ActionLink(Resources.Labels.InvoiceMonthlyDataTab, "Index", "InvoiceByMonth")</li>
    <li>@Html.ActionLink(Resources.Labels.InvoiceDailyDataTab, "Index", "InvoiceByDay")</li>
</ul>

<h2>@Resources.Labels.InvoiceTotal_PageHeader</h2>

<div class="col-xs-12 col-sm-12 col-md-12">
    <div class="panel panel-primary">

        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left"><strong>@Resources.Labels.InvoiceTotalDataTab</strong></h4>
            <br />

            <form class="form-horizontal col-md-12" role="form">
                <div class="row">
                    <!-- Date input -->
                    <div class="form-inline">

                        <div class="form-group">
                            <label class="control-label col-md-1" for="date1">Od</label>
                            <div class="col-md-2 col-sm-10">
                                <input class="form-control datefield" id="date1" name="date" placeholder="MM.YYYY" type="text" value="@ViewBag.CurrentFrom" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-1" for="date2">Do</label>
                            <div class="col-md-2 col-sm-10">
                                <input class="form-control datefield" id="date2" name="date" placeholder="MM.YYYY" type="text" value="@ViewBag.CurrentTo" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" for="date2">Filter</label>
                            <div class="col-md-2 col-sm-10">
                                <input class="form-control textfield" id="searchText" name="searchtext" type="text" value="@ViewBag.CurrentFilter" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class=" input-group-btn  col-md-2 col-sm-10">
                                <button class="btn btn-success text-right" aria-hidden="true" onclick="location.href = '@Url.Action("Index", "CustomerMontlyTotalInvoice")?insertDateFrom=' + document.getElementById('date1').value+'&'+'insertDateTo=' + document.getElementById('date2').value+'&'+'searchText=' + document.getElementById('searchText').value +'&'+'currentFilter='+ '@ViewBag.CurrentFilter' +'&'+'currentFrom='+ '@ViewBag.CurrentFrom'+'&'+'currentTo='+ '@ViewBag.CurrentTo'"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Hľadať </button>
                                <span style="margin: 10px"></span>
                                @*<button class="btn btn-danger text-right" aria-hidden="true" onclick="location.href = '@Url.Action("Index", "CustomerMontlyTotalInvoice")'"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Reset </button>*@
                                <a class="btn btn-danger" href="@Url.Action("Index", "CustomerMontlyTotalInvoice")"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Reset</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().InvoiceNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().StartBillingPeriod)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().StopBillingPeriod)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().DueDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().CustomerIdentification)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().CustomerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().NumberOfRequest)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().ReceivedBytes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().RequestedTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().MeasureOfUnits)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().TotalPriceWithoutVAT)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().VAT)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().TotalPriceWithVAT)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr onclick="location.href = '@(Url.Action("Index", "InvoiceByMonth", new { searchText = item.CustomerIdentification, insertDateFrom = item.StartBillingPeriod.ToString("MM.yyyy"), insertDateTo = item.StopBillingPeriod.ToString("MM.yyyy") }))'">
                        <td>
                            @Html.DisplayFor(modelItem => item.InvoiceNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartBillingPeriod)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StopBillingPeriod)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DueDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerIdentification)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfRequest)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReceivedBytes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestedTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MeasureOfUnits)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalPriceWithoutVAT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VAT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalPriceWithVAT)
                        </td>
                        <td>
                            <div>
                                <a class="btn btn-success" href="~/CustomerMontlyTotalInvoice/Details/?billingPeriod=@item.StartBillingPeriod.ToString("dd.MM.yyyy")&customerId=@item.CustomerID"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> @Resources.Labels.Btn_Detail </a>
                            </div>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    <br />
    <div>
        <a class="btn btn-info" href="~/CustomerMontlyTotalInvoice/Report/?extension=csv&page=@Model.PageNumber&insertDateFrom=@ViewBag.CurrentFrom&insertDateTo=@ViewBag.CurrentTo&searchText=@ViewBag.CurrentFilter"><span class="glyphicon glyphicon-save" aria-hidden="true"></span> @Resources.Labels.Btn_CSV </a>
        <a class="btn btn-info" href="~/CustomerMontlyTotalInvoice/Report/?extension=pdf&page=@Model.PageNumber&insertDateFrom=@ViewBag.CurrentFrom&insertDateTo=@ViewBag.CurrentTo&searchText=@ViewBag.CurrentFilter"><span class="glyphicon glyphicon-save" aria-hidden="true"></span> @Resources.Labels.Btn_PDF </a>
        <a class="btn btn-info" href="~/CustomerMontlyTotalInvoice/Report/?extension=xlsx&page=@Model.PageNumber&insertDateFrom=@ViewBag.CurrentFrom&insertDateTo=@ViewBag.CurrentTo&searchText=@ViewBag.CurrentFilter"><span class="glyphicon glyphicon-save" aria-hidden="true"></span> @Resources.Labels.Btn_XLSX </a>
        <a class="btn btn-info" href="~/CustomerMontlyTotalInvoice/Report/?extension=html&amp;page=@Model.PageNumber&amp;insertDateFrom=@ViewBag.CurrentFrom&amp;insertDateTo=@ViewBag.CurrentTo&amp;searchText=@ViewBag.CurrentFilter"><span class="glyphicon glyphicon-save" aria-hidden="true"></span> @Resources.Labels.Btn_HTML </a>
    </div>
    <br />
    Strana @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount Počet záznamov @Model.TotalItemCount
    @*@Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter, currentFrom = ViewBag.CurrentFrom, currentTo = ViewBag.CurrentTo }))*@
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter, currentFrom = ViewBag.CurrentFrom, currentTo = ViewBag.CurrentTo, currentCustId = ViewBag.CurrentCustId, currentServId = ViewBag.CurrentServId, currentDate = ViewBag.CurrentReqDate }))
</div>

