@model PagedList.IPagedList<WebPortal.view_InvoiceByMonth>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}
<ul class="nav nav-tabs" role="tablist">
    <li>@Html.ActionLink(Resources.Labels.InvoiceTotalDataTab, "Index", "CustomerMontlyTotalInvoice")</li>
    <li class="active">@Html.ActionLink(Resources.Labels.InvoiceMonthlyDataTab, "Index", "InvoiceByMonth")</li>
    <li>@Html.ActionLink(Resources.Labels.InvoiceDailyDataTab, "Index", "InvoiceByDay")</li>
</ul>

<h2>@Resources.Labels.InvoiceMonthlyData_PageHeader</h2>

<div class="col-xs-12 col-sm-12 col-md-12">
    <div class="panel panel-primary">

        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left"><strong>@Resources.Labels.InvoiceMonthlyDataTab</strong></h4>
            <br />
           
            <form class="form-horizontal col-md-12" role="form">
                <div class="row">
                    <!-- Date input -->
                    <div class="form-inline">
                        

                        <div class="form-group">
                            <label class="control-label col-md-1" for="date1">Od</label>
                            <div class="col-md-2 col-sm-10">
                                <input class="form-control datefield" id="date1" name="date" placeholder="MM.YYYY" type="text" value="@ViewBag.CurrentFrom" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-1" for="date2">Do</label>
                            <div class="col-md-2 col-sm-10">
                                <input class="form-control datefield" id="date2" name="date" placeholder="MM.YYYY" type="text" value="@ViewBag.CurrentTo" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" for="date2">Filter</label>
                            <div class="col-md-2 col-sm-10">
                                <input class="form-control textfield" id="searchText" name="searchtext" type="text" value="@ViewBag.CurrentFilter" />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="input-group-btn  col-md-2 col-sm-10">
                                <button id="Search" class="btn btn-success text-right" aria-hidden="true" location.href = '@Url.Action("Index", "InvoiceByMonth")?insertDateFrom=' + document.getElementById('date1').value+'&'+'insertDateTo=' + document.getElementById('date2').value+'&'+'searchText=' + document.getElementById('searchText').value +'&'+'currentFilter='+ '@ViewBag.CurrentFilter' +'&'+'currentFrom='+ '@ViewBag.CurrentFrom'+'&'+'currentTo='+ '@ViewBag.CurrentTo'><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Hľadať </button>
                                <span style="margin: 5px"></span>
                                @*<button id="Reset" class="btn btn-danger text-right" aria-hidden="true" location.href = '~/InvoiceByMonth/Index'><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Reset </button>*@
                                <a class="btn btn-danger" href="@Url.Action("Index", "InvoiceByMonth")"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Reset</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().DateOfRequest)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().CustomerIdentification)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().CustomerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().NumberOfRequest)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().ReceivedBytes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().RequestedTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().ServiceCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().CustomerServicename)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().UnitPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().MeasureOfUnits)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().BasicPriceWithoutVAT)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().VAT)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().BasicPriceWithVAT)
                    </th>
            
                </tr>

                @foreach (var item in Model)
                {
                    <tr onclick="location.href = '@(Url.Action("Index", "InvoiceByDay", new { searchText = item.CustomerIdentification, insertDateFrom = item.DateOfRequest.ToString("MM.yyyy"), insertDateTo = string.Empty }))'">
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfRequest)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerIdentification)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfRequest)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReceivedBytes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestedTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServiceCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerServicename)
                        </td>
                        <th>
                            @Html.DisplayFor(modelItem => item.UnitPrice)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.MeasureOfUnits)
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => item.BasicPriceWithoutVAT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VAT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BasicPriceWithVAT)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    <br />
    <div>
        <a class="btn btn-info" href="~/InvoiceByMonth/Report/?extension=csv&page=@Model.PageNumber&insertDateFrom=@ViewBag.CurrentFrom&insertDateTo=@ViewBag.CurrentTo&searchText=@ViewBag.CurrentFilter"><span class="glyphicon glyphicon-save" aria-hidden="true"></span> @Resources.Labels.Btn_CSV </a>
        <a class="btn btn-info" href="~/InvoiceByMonth/Report/?extension=pdf"><span class="glyphicon glyphicon-save" aria-hidden="true"></span> @Resources.Labels.Btn_PDF </a>
        @* <a class="btn btn-info" href="~/InvoiceByMonth/Report/?extension=xlsx"><span class="glyphicon glyphicon-save" aria-hidden="true"></span> @Resources.Labels.Btn_XLSX </a>*@
        <a class="btn btn-info" href="~/InvoiceByMonth/Report/?extension=html&amp;page=@Model.PageNumber&amp;insertDateFrom=@ViewBag.CurrentFrom&amp;insertDateTo=@ViewBag.CurrentTo&amp;searchText=@ViewBag.CurrentFilter"><span class="glyphicon glyphicon-save" aria-hidden="true"></span> @Resources.Labels.Btn_HTML </a>
    </div>
    <br />
    Strana @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount Počet záznamov @Model.TotalItemCount
    @*@Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter, currentFrom = ViewBag.CurrentFrom, currentTo = ViewBag.CurrentTo }))*@
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter, currentFrom = ViewBag.CurrentFrom, currentTo = ViewBag.CurrentTo, currentCustId = ViewBag.CurrentCustId, currentServId = ViewBag.CurrentServId, currentDate = ViewBag.CurrentReqDate }))
</div>

@section Scripts {
    <script type="text/javascript">
        $(function () {
            $('#date1').datetimepicker({
                viewMode: 'years',
                format: 'MM.YYYY'
            });
            $('#date2').datetimepicker({
                viewMode: 'years',
                format: 'MM.YYYY'
            });
        });
    </script>
}