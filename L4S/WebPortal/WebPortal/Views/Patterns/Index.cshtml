@model IEnumerable<CATServicePatterns>


@{
    ViewBag.Title = @Resources.Labels.Patterns_PageTitle;
}

<div class="col-xs-12 col-sm-12 col-md-12">
    <h2>@Resources.Labels.Patterns_PageTitle</h2>
    <p>@Resources.Labels.Patterns_PageSubtitle</p>
    <br />
    <p>
        <a style="margin-left:2.5em" class="btn btn-success pull-left" href="~/Service/Index/"><span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span> Späť na @Resources.Labels.Menu_Sluzby </a>
    </p>
    <br />
    <hr />
    <div class="panel panel-primary">
        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left"><strong>@Resources.Labels.Patterns_TableTitle</strong></h4>
            <br />

            <div class="group-btn text-right">
                <a class="modal-link-medium btn btn-primary-spacing btn-success " href="~/Patterns/Create/@ViewBag.FKServiceID"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;@Resources.Labels.Btn_Add </a>
            </div>

        </div>

        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <tr>
                        <th class="col-md-3">
                            @Html.DisplayNameFor(model => model.PatternLike)
                        </th>
                        <th class="col-md-1">
                            @Html.DisplayNameFor(model => model.PatternRegExp)
                        </th>
                        <th class="col-md-1">
                            @Html.DisplayNameFor(model => model.PatternDescription)
                        </th>
                        @*<th class="col-md-1">
                                @Html.DisplayNameFor(model => model.FKServiceID)
                            </th>*@
                        <th class="col-md-1">
                            @Html.DisplayNameFor(model => model.Entity)
                        </th>
                        <th class="col-md-2">
                            @Html.DisplayNameFor(model => model.Explanation)
                        </th>
                        <th class="col-md-2">
                            @Html.DisplayNameFor(model => model.DatSelectMethod)
                        </th>
                        <th class="col-md-2">@Resources.Labels.Txt_Action</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PatternLike)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PatternRegExp)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PatternDescription)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.FKServiceID)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Entity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Explanation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DatSelectMethod)
                                </td>

                                <td>
                                    <div class="group-btn text-right">
                                        <a class="modal-link-medium btn btn-primary-spacing btn-success" href="~/Patterns/Edit/@item.PKServicePatternID"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>&nbsp;@Resources.Labels.Btn_Edit </a>
                                        <a class="modal-link-small btn btn-primary-spacing btn-danger" href="~/Patterns/Delete/@item.PKServicePatternID"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span>&nbsp;@Resources.Labels.Btn_Delete </a>
                                    </div>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
        <hr />
        <p>
            <a class="btn btn-success pull-left" href="~/Service/Index/"><span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span> Späť na @Resources.Labels.Menu_Sluzby </a>
        </p>
    </div>


