@model WebPortal.Models.CustomerViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Vlastnosti zákazníka</h2>


<div class="row col-md-11">

    <div class="col-md-12">
        <div class="well">
            <table>
                <tr>
                    <td lass="col-md-11">    
                        <h3>@Model.Customer.FullName</h3>
                        <p>@Model.Customer.Address</p>               
                    </td>
                    <td class="col-md-1">
                        @if (Model.isCompany)
                            {<a class="btn btn-primary" href="~/Customer/CompanyList"><span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span> @Resources.Labels.Btn_Back </a>}
                        else
                            {<a class="btn btn-primary" href="~/Customer/IndividualList"><span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span> @Resources.Labels.Btn_Back </a>} 
                    </td>
                </tr>
            </table>
        </div>
    </div>

    @if (Model.Services == null)
    {
        <div class="col-md-8">
            @Html.Partial("_CustomerIdentifiers", Model.Customer)
        </div>
    }
    else
    {
        <div class="col-md-12">
            @Html.Partial("_ServicesList", Model.Services)         
        </div>
    }
    



</div>

