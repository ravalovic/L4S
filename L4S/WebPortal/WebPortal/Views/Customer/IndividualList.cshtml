@model IEnumerable<WebPortal.CATCustomerData>

@{
    ViewBag.Title = "Index";
}

<ul class="nav nav-tabs" role="tablist">    
    <li>@Html.ActionLink(Resources.Labels.CustomerTab_Company, "CompanyList", "Customer")</li>
    <li class="active">@Html.ActionLink(Resources.Labels.CustomerTab_Individual, "IndividualList", "Customer")</li>
</ul>


<h2>@Resources.Labels.CustomerTab_Individual_PageTitle</h2>
<p>@Resources.Labels.CustomerTab_Individual_PageSubtitle</p>


<div class="col-xs-12 col-sm-12 col-md-12">

    <br />
    <br/>
    <div class="panel panel-primary">
        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left"><strong>@Resources.Labels.CustomerTab_Individual_PageTitle</strong></h4>
            <br />
            <div class="input-group">
                <input style="color: black" id="SearchBox" name="Search" type="search" />&nbsp;
                <button class="btn btn-danger" aria-hidden="true" onclick="location.href='@Url.Action("Search", "Customer")?Name=' + document.getElementById('SearchBox').value"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Hľadať </button>
                <div class="input-group-btn">
                    <a class="modal-link-medium btn btn-success" href="/Customer/Create/2"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> @Resources.Labels.Btn_Create </a>
                </div>
            </div>
        </div>

        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <tr>              
                    <th>
                        @Html.DisplayNameFor(model => model.IndividualTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IndividualFirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IndividualLastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IndividualID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>                    
                    <th>
                        @Html.DisplayNameFor(model => model.ContactEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactMobile)
                    </th>                   
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IndividualTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IndividualFirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IndividualLastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IndividualID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>                       
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactMobile)
                        </td>                        
                        <td>
                            <div >
                                <a class="btn btn-primary" href="/Customer/Services/@item.PKCustomerDataID"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> @Resources.Labels.Btn_Settings </a>
                                <a class="modal-link-medium btn btn-success" href="/Customer/Edit/@item.PKCustomerDataID"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> @Resources.Labels.Btn_Edit </a>
                                <a class="modal-link-small btn btn-danger" href="/Customer/Delete/@item.PKCustomerDataID"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> @Resources.Labels.Btn_Delete </a>

                            </div>
                        </td>
                    </tr>
                }

            </table>

            </div>
        </div>
    </div>


