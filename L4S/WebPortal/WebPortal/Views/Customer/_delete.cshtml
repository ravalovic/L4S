@model WebPortal.CATCustomerData

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h4><b>@Resources.Labels.Customer_DeleteDialogTitle</b></h4>
</div>
@*@using (Html.BeginForm())*@

@using (Html.BeginForm("Delete", "Customer"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CustomerType)
    @Html.HiddenFor(model => model.PKCustomerDataID)
    

    <div class="modal-body">

        <div class="row">   

                <div class="form-horizontal col-md-offset-1 col-md-10">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })                    

                    <h4><b>@Resources.Labels.Customer_DeleteDialogSure</b></h4>

                    <p>@Model.UniversalName</p>
                    <p>@Model.Address</p>
                </div>

            </div>
        </div>

    <div class="modal-footer">
        <button class="btn" data-dismiss="modal btn btn-primary" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> @Resources.Labels.Btn_Back</button>
        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> @Resources.Labels.Btn_Delete</button>

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
