@model PagedList.IPagedList<WebPortal.CATCustomerData>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}

<ul class="nav nav-tabs" role="tablist">
    <li class="active">@Html.ActionLink(Resources.Labels.CustomerTab_Company, "CompanyList", "Customer")</li>
    <li>@Html.ActionLink(Resources.Labels.CustomerTab_Individual, "IndividualList", "Customer")</li>

</ul>


<h2>@Resources.Labels.CustomerTab_Company_PageTitle</h2>
<p>@Resources.Labels.CustomerTab_Company_PageSubtitle</p>


<div class="col-xs-12 col-sm-12 col-md-12">
   
        <br />
    <br/>
    <div class="panel panel-primary">
        <div class="panel-heading clearfix">
            <h4 class="panel-title pull-left"><strong>@Resources.Labels.CustomerTab_Company_PageTitle</strong></h4>
            <br />
            <div class="form-group form-horizontal col-md-12">
                <!-- Filter input -->
                <label class="control-label col-md-1" for="date2">Filter</label>
                <input class="form-control col-md-3 textfield" id="searchText" name="searchtext" type="text" value="@ViewBag.CurrentFilter" />
                <div class="input-group-btn text-right">
                    <button class="btn btn-success text-right" aria-hidden="true" onclick="location.href = '@Url.Action("Search", "Customer")?searchText=' + document.getElementById('searchText').value +'&'+'currentFilter='+ '@ViewBag.CurrentFilter'"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Hľadať </button>
                    <span style="margin: 5px"></span>
                    <button class="btn btn-danger text-right" aria-hidden="true" onclick="location.href = '@Url.Action("Index", "Customer")'"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Reset </button>
                    @*<div class="input-group-btn col-md-8">
                        <a class="modal-link-medium btn btn-success" href="/Customer/Create/2"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> @Resources.Labels.Btn_Create </a>
                    </div>*@
                    <span style="margin: 10px"></span>
                    <a class="modal-link-medium btn btn-success " href="/Customer/Create/1"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> @Resources.Labels.Btn_Create </a>
                </div>
                    @*<div class="input-group-btn  col-md-8">
                        <a class="modal-link-medium btn btn-success" href="/Customer/Create/2"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> @Resources.Labels.Btn_Create </a>
                    </div>*@
                
            </div>
        </div>

        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().CompanyType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().CompanyID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().CompanyTAXID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().CompanyVATID)
                    </th>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Address)                       
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().ContactEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().ContactMobile)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().ContactPhone)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyTAXID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyVATID)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactMobile)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactPhone)
                        </td>
                        <td>
                            <div>
                                <a class="btn btn-primary" href="/Customer/Services/@item.PKCustomerDataID"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> @Resources.Labels.Btn_Settings </a>
                                <a class="modal-link-medium btn btn-success" href="/Customer/Edit/@item.PKCustomerDataID"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> @Resources.Labels.Btn_Edit </a>
                                <a class="modal-link-small btn btn-danger" href="/Customer/Delete/@item.PKCustomerDataID"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> @Resources.Labels.Btn_Delete </a>
                            </div>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    Strana @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount Počet záznamov @Model.TotalItemCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }))
    </div>

